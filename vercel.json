{
  "builds": [
    { "src": "client/package.json", "use": "@vercel/static-build" },
    { "src": "server/package.json", "use": "@vercel/node" }
  ],
  "routes": [
    {
      "src": "/server/(.*)",
      "dest": "/server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/$1"
    }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/" }
  ]
}
