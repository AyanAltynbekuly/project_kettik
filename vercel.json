{
  "builds": [
    { "src": "client/package.json", "use": "@vercel/static-build" },
    { "src": "server/package.json", "use": "@vercel/node" }
  ],
  "rewrites": [
    { "source": "/server/(.*)", "destination": "/server/server.js" },
    { "source": "/(.*)", "destination": "/client/dist/$1" }
  ]
}
